<UserControl
    x:Class="Legend2Tool.WPF.Views.PortConfView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:autogrid="clr-namespace:WpfAutoGrid;assembly=WpfAutoGrid.Core"
    xmlns:cv="clr-namespace:Legend2Tool.WPF.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:local="clr-namespace:Legend2Tool.WPF.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:Legend2Tool.WPF.ViewModels"
    Width="1050"
    d:DataContext="{d:DesignInstance vm:PortConfViewModel}"
    d:DesignHeight="400"
    mc:Ignorable="d">
    <UserControl.Resources>
        <cv:EnumDescriptionConverter x:Key="EnumDescriptionConverter" />
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid>

            <autogrid:AutoGrid ColumnCount="7" ColumnWidth="*">
                <autogrid:AutoGrid.Resources>
                    <Style BasedOn="{StaticResource {x:Type CheckBox}}" TargetType="CheckBox">
                        <Setter Property="Margin" Value="5,0,0,0" />
                    </Style>
                    <Style BasedOn="{StaticResource {x:Type TextBlock}}" TargetType="TextBlock">
                        <Setter Property="Margin" Value="5,0,0,0" />
                        <Setter Property="VerticalAlignment" Value="Center" />
                        <Setter Property="FontWeight" Value="Bold" />
                    </Style>
                    <Style BasedOn="{StaticResource {x:Type TextBox}}" TargetType="TextBox">
                        <Setter Property="Margin" Value="5,2,5,2" />
                        <Setter Property="Width" Value="65" />
                        <Setter Property="Height" Value="28" />
                    </Style>
                </autogrid:AutoGrid.Resources>

                <GroupBox Header="登录网关" Style="{StaticResource GroupBoxTab}">
                    <autogrid:AutoGrid Columns="auto,auto" RowCount="2">
                        <StackPanel Orientation="Horizontal">
                            <CheckBox IsChecked="{Binding LoginGateGetStart}" />
                            <TextBlock Text="端口" />
                        </StackPanel>
                        <TextBox Text="{Binding LoginGateGatePort, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=true}" />
                    </autogrid:AutoGrid>
                </GroupBox>

                <GroupBox
                    Grid.Column="1"
                    Header="数据库服务器"
                    Style="{StaticResource GroupBoxTab}">
                    <autogrid:AutoGrid Columns="auto,auto" RowCount="2">
                        <StackPanel Orientation="Horizontal">
                            <CheckBox IsChecked="{Binding DBServerGetStart}" />
                            <TextBlock Text="端口" />
                        </StackPanel>
                        <TextBox Text="{Binding DBServerGatePort, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=true}" />
                        <TextBlock Text="通讯端口" />
                        <TextBox Text="{Binding DBServerServerPort, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=true}" />
                    </autogrid:AutoGrid>
                </GroupBox>

                <GroupBox
                    Grid.Column="2"
                    Header="M2主服务器"
                    Style="{StaticResource GroupBoxTab}">
                    <autogrid:AutoGrid Columns="auto,auto" RowCount="2">
                        <StackPanel Orientation="Horizontal">
                            <CheckBox IsChecked="{Binding M2ServerGetStart}" />
                            <TextBlock Text="端口" />
                        </StackPanel>
                        <TextBox Text="{Binding M2ServerGatePort}" />
                        <TextBlock Text="通讯端口" />
                        <TextBox Text="{Binding M2ServerMsgSrvPort}" />
                    </autogrid:AutoGrid>
                </GroupBox>
                <GroupBox
                    Grid.Column="3"
                    Header="角色网关"
                    Style="{StaticResource GroupBoxTab}">
                    <autogrid:AutoGrid Columns="auto,auto" RowCount="2">
                        <StackPanel Orientation="Horizontal">
                            <CheckBox IsChecked="{Binding SelGateGetStart}" />
                            <TextBlock Text="端口1" />
                        </StackPanel>
                        <TextBox Text="{Binding SelGateGatePort}" />
                        <StackPanel Orientation="Horizontal">
                            <CheckBox IsChecked="{Binding SelGateGetStart1}" />
                            <TextBlock Text="端口2" />
                        </StackPanel>
                        <TextBox Text="{Binding SelGateGatePort1}" />
                    </autogrid:AutoGrid>
                </GroupBox>
                <GroupBox
                    Grid.Column="4"
                    Header="账号服务器"
                    Style="{StaticResource GroupBoxTab}">
                    <autogrid:AutoGrid Columns="auto,auto" RowCount="2">
                        <StackPanel Orientation="Horizontal">

                            <CheckBox IsChecked="{Binding LoginServerGetStart}" />
                            <TextBlock Text="端口" />
                        </StackPanel>
                        <TextBox Text="{Binding LoginServerGatePort}" />
                        <TextBlock Text="通讯端口" />
                        <TextBox Text="{Binding LoginServerServerPort}" />
                    </autogrid:AutoGrid>
                </GroupBox>
                <GroupBox
                    Grid.Column="5"
                    Header="日志服务器"
                    Style="{StaticResource GroupBoxTab}">
                    <autogrid:AutoGrid Columns="auto,auto" RowCount="2">
                        <StackPanel Orientation="Horizontal">
                            <CheckBox IsChecked="{Binding LogServerGetStart}" />
                            <TextBlock Text="端口" />
                        </StackPanel>
                        <TextBox Text="{Binding LogServerPort}" />
                    </autogrid:AutoGrid>
                </GroupBox>

                <GroupBox
                    Grid.Column="6"
                    Header="游戏网关"
                    Style="{StaticResource GroupBoxTab}">
                    <autogrid:AutoGrid Columns="auto,auto" RowCount="2">
                        <TextBlock Text="端口1" />
                        <TextBox Text="{Binding RunGateGatePort1}" />

                        <TextBlock Text="网关数量" />
                        <hc:NumericUpDown
                            Width="65"
                            Maximum="8"
                            Minimum="0"
                            Value="{Binding RunGateCount, UpdateSourceTrigger=PropertyChanged}" />
                    </autogrid:AutoGrid>
                </GroupBox>
            </autogrid:AutoGrid>
        </Grid>

        <Grid Grid.Row="1">
            <GroupBox Header="登陆器配置" Style="{StaticResource GroupBoxTab}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <GroupBox Header="网站列表" Style="{StaticResource GroupBoxTab}">
                        <autogrid:AutoGrid Columns="auto,auto" RowCount="2">
                            <autogrid:AutoGrid.Resources>
                                <Style BasedOn="{StaticResource {x:Type TextBlock}}" TargetType="TextBlock">
                                    <Setter Property="Margin" Value="5,0,5,0" />
                                    <Setter Property="VerticalAlignment" Value="Center" />
                                    <Setter Property="FontWeight" Value="Bold" />
                                </Style>
                                <Style BasedOn="{StaticResource {x:Type TextBox}}" TargetType="TextBox">
                                    <Setter Property="Margin" Value="5" />
                                    <Setter Property="Width" Value="140" />
                                </Style>
                            </autogrid:AutoGrid.Resources>
                            <TextBlock Text="配置地址" />
                            <TextBox Text="{Binding MainAddress}" />
                            <TextBlock Text="备用地址" />
                            <TextBox Text="{Binding BackupAddress}" />
                        </autogrid:AutoGrid>
                    </GroupBox>

                    <GroupBox
                        Grid.Column="1"
                        Header="TCP列表"
                        Style="{StaticResource GroupBoxTab}">
                        <autogrid:AutoGrid ColumnCount="6" RowCount="2">
                            <autogrid:AutoGrid.Resources>
                                <Style BasedOn="{StaticResource {x:Type TextBlock}}" TargetType="TextBlock">
                                    <Setter Property="Margin" Value="5,0,5,0" />
                                    <Setter Property="VerticalAlignment" Value="Center" />
                                    <Setter Property="FontWeight" Value="Bold" />
                                </Style>
                                <Style BasedOn="{StaticResource {x:Type TextBox}}" TargetType="TextBox">
                                    <Setter Property="Margin" Value="5" />
                                </Style>
                            </autogrid:AutoGrid.Resources>

                            <TextBlock Text="主TCP" />
                            <TextBox Width="120" Text="{Binding MainTcpListServer}" />

                            <TextBlock Text="端口号" />
                            <TextBox Width="50" Text="{Binding MainTcpPort}" />

                            <TextBlock Text="文件" />
                            <TextBox Text="{Binding MainTcpConfigFile}" />

                            <TextBlock Text="备TCP" />
                            <TextBox Width="120" Text="{Binding BackupTcpListServer}" />

                            <TextBlock Text="端口号" />
                            <TextBox Width="50" Text="{Binding BackupTcpPort}" />

                            <TextBlock Text="文件" />
                            <TextBox Width="70" Text="{Binding BackupTcpConfigFile}" />
                        </autogrid:AutoGrid>
                    </GroupBox>
                    <autogrid:AutoGrid
                        Grid.Column="2"
                        ColumnCount="4"
                        RowCount="4">
                        <autogrid:AutoGrid.Resources>
                            <Style BasedOn="{StaticResource {x:Type TextBlock}}" TargetType="TextBlock">
                                <Setter Property="Margin" Value="5,0,5,0" />
                                <Setter Property="VerticalAlignment" Value="Center" />
                                <Setter Property="FontWeight" Value="Bold" />
                            </Style>
                            <Style BasedOn="{StaticResource {x:Type TextBox}}" TargetType="TextBox">
                                <Setter Property="Margin" Value="0,5,0,5" />
                                <Setter Property="Width" Value="100" />
                            </Style>
                            <Style BasedOn="{StaticResource {x:Type Button}}" TargetType="Button">
                                <Setter Property="Margin" Value="5,0,0,0" />
                                <Setter Property="Width" Value="110" />
                            </Style>
                        </autogrid:AutoGrid.Resources>
                        <TextBlock Text="快捷方式名" />
                        <TextBox Text="{Binding LauncherName}" />

                        <Button Command="{Binding SetByServerNameCommand}" Content="按服务器名设置" />

                        <Grid />

                        <TextBlock Text="Resource目录" />
                        <TextBox Text="{Binding ResourcesDir}" />
                        <Grid>
                            <Button Command="{Binding GenerateByGamePinyinCommand}" Content="按游戏名生成" />
                            <Grid.ToolTip>
                                <ToolTip Content="打开补丁目录方可设置" />
                            </Grid.ToolTip>
                        </Grid>
                        <Grid />

                        <TextBlock Text="微端更新密码" />
                        <TextBox Text="{Binding UpdatePassword}" />

                        <TextBlock Text="多开数量" />
                        <hc:NumericUpDown
                            Width="60"
                            Margin="0,5,0,0"
                            Maximum="8"
                            Minimum="0"
                            Value="{Binding MultiInstanceCount, UpdateSourceTrigger=PropertyChanged}" />
                    </autogrid:AutoGrid>
                </Grid>
            </GroupBox>
        </Grid>

        <Grid Grid.Row="2">
            <GroupBox Header="服务端设置" Style="{StaticResource GroupBoxTab}">
                <autogrid:AutoGrid ColumnCount="8" RowCount="2">
                    <autogrid:AutoGrid.Resources>
                        <Style BasedOn="{StaticResource {x:Type TextBlock}}" TargetType="TextBlock">
                            <Setter Property="Margin" Value="5" />
                            <Setter Property="VerticalAlignment" Value="Center" />
                            <Setter Property="FontWeight" Value="Bold" />
                        </Style>
                        <Style BasedOn="{StaticResource {x:Type TextBox}}" TargetType="TextBox">
                            <Setter Property="Margin" Value="5" />
                            <Setter Property="Width" Value="120" />
                            <Setter Property="Height" Value="28" />
                        </Style>
                        <Style BasedOn="{StaticResource {x:Type Button}}" TargetType="Button">
                            <Setter Property="Margin" Value="5" />
                            <Setter Property="Width" Value="110" />
                        </Style>
                    </autogrid:AutoGrid.Resources>
                    <TextBlock Text="游戏服务器名称" />
                    <TextBox Text="{Binding GameName}" />
                    <Button Command="{Binding SetDefaultPortConfCommand}" Content="默认设置" />
                    <TextBlock FontWeight="Bold" Text="所有端口增加：" />

                    <hc:NumericUpDown
                        Width="60"
                        Height="28"
                        Margin="0,5,0,2"
                        Maximum="99"
                        Minimum="-99"
                        Value="{Binding ModifyNumberOfPort, UpdateSourceTrigger=PropertyChanged}" />
                    <Button Command="{Binding BatchEditCommand}" Content="批量修改" />
                    <ComboBox
                        Height="28"
                        MinWidth="80"
                        SelectedValue="{Binding SelectedEncoding, Mode=TwoWay}"
                        SelectedValuePath="Content">
                        <ComboBoxItem Content="GB18030" />
                        <ComboBoxItem Content="UTF-8" />
                    </ComboBox>
                    <Button Command="{Binding ConvertEncodingCommand}" Content="转换编码">
                        <Button.ToolTip>
                            <ToolTip Content="转换Envir下的所有文件" />
                        </Button.ToolTip>
                    </Button>
                    <TextBlock Text="游戏外网IP地址" />
                    <TextBox Text="{Binding ExtIPAddr}" />
                    <Button Command="{Binding GetExtIpAddrCommand}" Content="获取外网IP" />
                    <Button Command="{Binding SetLocalIpCommand}" Content="设置本地IP" />
                    <TextBlock Text="引擎类型：" />
                    <TextBlock Text="{Binding EngineType, Converter={StaticResource EnumDescriptionConverter}}" />
                    <Button
                        Command="{Binding SaveConfigToFileCommand}"
                        Content="配置完成请保存"
                        Style="{StaticResource ButtonPrimary}" />
                </autogrid:AutoGrid>
            </GroupBox>
        </Grid>


    </Grid>
</UserControl>
