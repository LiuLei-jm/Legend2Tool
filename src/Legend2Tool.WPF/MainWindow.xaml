<Window
    x:Class="Legend2Tool.WPF.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:local="clr-namespace:Legend2Tool.WPF"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="clr-namespace:Legend2Tool.WPF.Views"
    xmlns:vm="clr-namespace:Legend2Tool.WPF.ViewModels"
    Title="传奇配置工具"
    Width="900"
    Height="450"
    d:DataContext="{d:DesignInstance vm:MainViewModel}"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <views:MenuView Grid.Row="0" DataContext="{Binding MenuViewModel}" />

        <TabControl
            Grid.Row="1"
            HorizontalContentAlignment="Left"
            ItemsSource="{Binding ViewModels}"
            SelectedItem="{Binding SelectedViewModel}">
            <TabControl.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Head}" />
                </DataTemplate>
            </TabControl.ItemTemplate>
            <TabControl.Resources>
                <DataTemplate DataType="{x:Type vm:PortConfViewModel}">
                    <views:PortConfView />
                </DataTemplate>
                <DataTemplate DataType="{x:Type vm:ScriptOptimizationViewModel}">
                    <views:ScriptOptimizationView />
                </DataTemplate>
            </TabControl.Resources>
        </TabControl>
        <ScrollViewer
            Grid.Row="2"
            HorizontalAlignment="Right"
            VerticalScrollBarVisibility="Hidden">
            <StackPanel
                Margin="0,10,10,10"
                VerticalAlignment="Bottom"
                hc:Growl.GrowlParent="True" />
        </ScrollViewer>
        <Grid
            Grid.Row="3"
            Margin="0,5,0,5"
            VerticalAlignment="Bottom">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>
            <ProgressBar Grid.Column="0" Value="{Binding ProgressPercentage}" />
            <TextBlock
                Grid.Column="1"
                Margin="10,0,10,0"
                VerticalAlignment="Center"
                Foreground="Blue"
                Text="{Binding ProgressText}" />
        </Grid>
    </Grid>

</Window>
