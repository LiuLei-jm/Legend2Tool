<Window
    x:Class="Legend2Tool.WPF.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Legend2Tool.WPF"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:view="clr-namespace:Legend2Tool.WPF.Views"
    xmlns:vm="clr-namespace:Legend2Tool.WPF.ViewModels"
    Title="传奇配置工具"
    Width="800"
    Height="450"
    d:DataContext="{d:DesignInstance vm:MainViewModel}"
    Style="{StaticResource MaterialDesignWindow}"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <view:MenuView Grid.Row="0" DataContext="{Binding MenuViewModel}" />
        <view:PortConfView Grid.Row="1" DataContext="{Binding PortConfViewModel}" />
    </Grid>
</Window>
