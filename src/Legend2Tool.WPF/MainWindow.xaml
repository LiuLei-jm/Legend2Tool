<Window x:Class="Legend2Tool.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:hc="https://handyorg.github.io/handycontrol"
        xmlns:local="clr-namespace:Legend2Tool.WPF"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:Legend2Tool.WPF.Views"
        xmlns:vm="clr-namespace:Legend2Tool.WPF.ViewModels"
        Title="传奇配置工具"
        Width="1070"
        Height="700"
        MinWidth="1070"
        MinHeight="700"
        d:DataContext="{d:DesignInstance vm:MainViewModel}"
        hc:Growl.GrowlParent="True"
        WindowStartupLocation="CenterOwner"
        mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <views:MenuView Grid.Row="0"
                        DataContext="{Binding MenuViewModel}"
                        Grid.ColumnSpan="2" />

        <TabControl Grid.Row="1"
                    HorizontalContentAlignment="Left"
                    ItemsSource="{Binding ViewModels}"
                    SelectedItem="{Binding SelectedViewModel}"
                    Grid.ColumnSpan="2"
                    Margin="0,0,0,30"
                    Grid.RowSpan="2">
            <TabControl.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Head}" />
                </DataTemplate>
            </TabControl.ItemTemplate>
            <TabControl.Resources>
                <DataTemplate DataType="{x:Type vm:PortConfViewModel}">
                    <views:PortConfView />
                </DataTemplate>
                <DataTemplate DataType="{x:Type vm:ScriptOptimizationViewModel}">
                    <views:ScriptOptimizationView />
                </DataTemplate>
            </TabControl.Resources>
        </TabControl>

        <Grid Grid.Row="2"
              VerticalAlignment="Center"
              Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>
            <ProgressBar Grid.Column="0"
                         Value="{Binding ProgressPercentage}" />
            <TextBlock Grid.Column="1"
                       Margin="10,0,10,0"
                       VerticalAlignment="Center"
                       Foreground="Blue"
                       MinWidth="200"
                       Text="{Binding ProgressText}" />
        </Grid>
    </Grid>

</Window>
